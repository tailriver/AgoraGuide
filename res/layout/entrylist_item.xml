<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/EntryListView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/entrylist_item_title"
        style="@style/TitleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="TITLE" >
    </TextView>

    <TextView
        android:id="@+id/entrylist_item_sponsor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="SPONSOR"
        android:textColor="@color/secondary_text"
        android:textSize="12dp" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/entrylist_item_schedule"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="SCHEDULE"
            android:textColor="@color/secondary_text"
            android:textSize="12dp" >
        </TextView>

        <TextView
            android:id="@+id/entrylist_item_reservation"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:singleLine="true"
            android:text="RESERVATION"
            android:textColor="@color/secondary_text"
            android:textSize="12dp" >
        </TextView>

        <TextView
            android:id="@+id/entrylist_item_target"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:singleLine="true"
            android:text="TARGET"
            android:textColor="@color/secondary_text"
            android:textSize="12dp" >
        </TextView>
    </LinearLayout>

</LinearLayout>