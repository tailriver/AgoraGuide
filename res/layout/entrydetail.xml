<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:weightSum="1"
	android:background="@android:color/background_dark">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical" android:padding="5dp">
			<LinearLayout android:layout_width="fill_parent"
				android:orientation="horizontal" android:layout_height="wrap_content"
				android:minHeight="90dp" android:layout_weight="0.0">
				<LinearLayout android:layout_height="fill_parent"
					android:orientation="vertical" android:layout_width="wrap_content"
					android:layout_weight="1.0">
					<TextView android:id="@+id/entrydetail_title"
						android:text="TextView" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_weight="0.5"
						android:textSize="21sp" android:textColor="@android:color/primary_text_dark"></TextView>
					<TextView android:id="@+id/entrydetail_sponsor"
						android:text="TextView" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_weight="0.5" android:gravity="bottom"
						android:textSize="14sp" android:textColor="@android:color/secondary_text_dark"></TextView>
				</LinearLayout>
				<ImageView android:id="@+id/entrydetail_thumbnail"
					android:layout_width="90dp" android:layout_height="fill_parent"
					android:layout_weight="0.0" android:layout_marginTop="10dp"
					android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
					android:layout_gravity="center_horizontal"></ImageView>
			</LinearLayout>
			<TextView android:id="@+id/entrydetail_cosponsor"
				android:text="TextView" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_weight="0.5"
				android:textSize="12sp" android:textColor="@android:color/secondary_text_dark"></TextView>
			<TextView android:text="TextView" android:layout_width="fill_parent"
				android:id="@+id/entrydetail_abstract" android:layout_height="wrap_content"
				android:textSize="12sp" android:textColor="@android:color/primary_text_dark"></TextView>
			<TextView android:text="TextView" android:layout_width="fill_parent"
				android:id="@+id/entrydetail_content" android:layout_height="wrap_content"
				android:textSize="11sp" android:textColor="@android:color/primary_text_dark"
				android:autoLink="web"></TextView>
			<TextView android:text="TextView" android:layout_width="fill_parent"
				android:id="@+id/entrydetail_reservation" android:layout_height="wrap_content"
				android:textSize="11sp" android:textColor="@android:color/primary_text_dark"></TextView>
			<TextView android:text="TextView" android:layout_width="fill_parent"
				android:id="@+id/entrydetail_note" android:layout_height="wrap_content"
				android:textSize="11sp" android:textColor="@android:color/primary_text_dark"></TextView>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
