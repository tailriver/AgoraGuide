<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:padding="5dp">
	<LinearLayout android:layout_width="fill_parent"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_weight="0.0">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1.0"
			android:orientation="vertical">
			<TextView android:id="@+id/entrydetail_icon" android:text="Icon"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textSize="14sp" android:textColor="@android:color/darker_gray"></TextView>
			<TextView android:id="@+id/entrydetail_title" android:text="Title"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:paddingTop="5dp" android:textSize="20sp" android:textColor="@android:color/white"></TextView>
		</LinearLayout>
		<ImageView android:id="@+id/entrydetail_thumbnail"
			android:layout_width="90dp" android:layout_height="90dp"
			android:layout_weight="0.0" android:layout_marginLeft="5dp"
			android:layout_gravity="center_horizontal"></ImageView>
	</LinearLayout>
	<TextView android:id="@+id/entrydetail_sponsor" android:text="Sponsor"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="bottom" android:textSize="14sp" android:textColor="@android:color/darker_gray"></TextView>
	<TextView android:text="Abstract" android:layout_width="fill_parent"
		android:id="@+id/entrydetail_abstract" android:layout_height="wrap_content"
		android:textSize="14sp" android:textColor="@android:color/white"
		android:paddingBottom="5dp"></TextView>
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical" android:paddingRight="3dp">
			<TextView android:text="Content" android:layout_width="fill_parent"
				android:id="@+id/entrydetail_content" android:layout_height="wrap_content"
				android:textSize="12sp" android:textColor="@android:color/white"
				android:autoLink="web"></TextView>
			<TextView android:text="Reservation" android:layout_width="fill_parent"
				android:id="@+id/entrydetail_reservation" android:layout_height="wrap_content"
				android:textSize="12sp" android:textColor="@android:color/white"></TextView>
			<TextView android:text="Note" android:layout_width="fill_parent"
				android:id="@+id/entrydetail_note" android:layout_height="wrap_content"
				android:textSize="12sp" android:textColor="@android:color/white"></TextView>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
